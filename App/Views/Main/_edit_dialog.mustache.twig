
{% import 'Main/_form_macros.twig' as form %}

<form action="#" class="form-horizontal">
    <div class="form-group">
        {{ form.number('day') }}
    </div>
    <div class="form-group">
        {{ form.input('description') }}
    </div>
    <div class="form-group">
        {{ form.number('estimated', t('estimated-amount')) }}
    </div>
    <div class="form-group">
        {{ form.number('real', t('real-amount')) }}
    </div>
    <div class="form-group">
        {{ form.select('status', [['1', 'not-commited'], ['2', 'commited']]) }}
    </div>
</form>
